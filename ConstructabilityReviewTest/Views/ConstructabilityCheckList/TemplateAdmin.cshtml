            $("#divbody").load(loadurl, function () {
            $("#myModal").modal("show");
            });
        }
        function AddItem(SectionId, MajorSectionName) {
            var loadurl = '@Url.Action("AddSectionItem", "ConstructabilityCheckList")' + "?SectionID=" + SectionId + "&MajorSectionName=" + MajorSectionName;
