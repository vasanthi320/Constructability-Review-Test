@model Constructability_Review_Test_Models.TemplateListModel
@if (Model != null)
{
    using (Html.BeginForm("SaveAddTemplateSectionDtls", "ConstructabilityCheckList", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "frmEditDetails" }))
    {
        @Html.HiddenFor(p => p.TemplateSectionID)

        <div class="form-horizontal">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-xs-4 ">Item Code</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.TemplateSectionItemCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TemplateSectionItemCode, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-4 ">Item Name</label>
                <div class="col-md-8">
                    @Html.TextAreaFor(model => model.TemplateSectionItemName, new { @class = "form-control", @rows = 6 })
                    @Html.ValidationMessageFor(model => model.TemplateSectionItemName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-4 ">Item Link</label>
                <div class="col-md-8">
                    @Html.TextAreaFor(model => model.TemplateSectionItemLink, new { @class = "form-control", @rows = 6 })
                    @Html.ValidationMessageFor(model => model.TemplateSectionItemLink, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-4 ">Active</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.TemplateSectionItemActive, new { @class = "form-control", @readonly = true })
                    @Html.ValidationMessageFor(model => model.TemplateSectionItemActive, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="btnSave" type="submit" style="margin-left: 50px;" data-toggle="modal">Save</button>
                <button class="btn btn-primary" id="btnclose" data-dismiss="modal" type="button">Close</button>
            </div>
        </div>
    }
}


