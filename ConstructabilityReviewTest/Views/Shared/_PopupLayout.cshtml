<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hoar Expense App.</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/plugins/autocomplete/jquery-ui.autocomplete.css" rel="stylesheet" />
    <link href="~/Content/plugins/data Tables/jquery.dataTables.min.css" rel="stylesheet" />
    @RenderSection("styles", required: false)
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-41291883-4"></script>
    <script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'UA-41291883-4');
    </script>

    <style>
        body {
            margin: -50px;
        }

        .navbar-default {
            background-color: #004990;
            color: white;
        }

        .dropdown {
            background-color: #004990;
        }

        ul > li > .dropdown open {
            background-color: #004990;
        }

        .navbar-default .navbar-nav > .open > a, .navbar-default .navbar-nav > .open > a:hover, .navbar-default .navbar-nav > .open > a:focus {
            background-color: #004990;
        }

        .navbar-default .navbar-nav > li > a {
            color: white;
        }

        ul.nav a:hover, ul.nav a:active, ul.nav a:focus {
            color: white;
        }

        #navbar {
            color: #FFFFFF;
            background-color: #004990;
        }

        #text > ul > li > a {
            color: white;
        }
    </style>
</head>
<body>
  
    <div class="container body-content">
        @RenderBody()
   
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
