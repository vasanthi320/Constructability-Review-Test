@using System.Reflection
@using ConstructabilityReviewTest.Controllers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Constructability Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/autocomplete/jquery-ui.autocomplete.css" rel="stylesheet" />
    <link href="~/Content/plugins/data Tables/jquery.dataTables.min.css" rel="stylesheet" />
    @RenderSection("styles", required: false)
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-41291883-4"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-41291883-4');
    </script>

    <style>
        body {
            margin: -50px;
        }

        .navbar-default {
            background-color: #004990;
            color: white;
        }

        .dropdown {
            background-color: #004990;
        }

        ul > li > .dropdown open {
            background-color: #004990;
        }

        .navbar-default .navbar-nav > .open > a, .navbar-default .navbar-nav > .open > a:hover, .navbar-default .navbar-nav > .open > a:focus {
            background-color: #004990;
        }

        .navbar-default .navbar-nav > li > a {
            color: white;
        }

        ul.nav a:hover, ul.nav a:active, ul.nav a:focus {
            color: white;
        }

        #navbar {
            color: #FFFFFF;
            background-color: #004990;
        }

        #text > ul > li > a {
            color: white;
        }

        .img-responsive {
            max-width: 90%; /* or to whatever you want here */
            max-height: auto; /* or to whatever you want here */
        }
    </style>
</head>
<body>
    <div id="navbar" class="navbar  navbar-default navbar-fixed-top  bg-primary">
        <div class="container">
            <div class="navbar-header pull-left">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div id="text" class="navbar-collapse collapse ">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("ConstructabilityTemplate", "ConstructabilityTemplate", "ConstructabilityCheckList")</li>
                    @if (User.IsInRole("CTA"))
                    {
                        <li>@Html.ActionLink("TemplateAdmin", "TemplateAdmin", "ConstructabilityCheckList")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content content-wrapper" style="padding-left:50px">
        <br />
        <br />
        <br />
        <img src="~/Content/images/c2_logo_smaller .png" class="visible-lg  visible-md" />
        @RenderBody()
        <hr />
    </div>
    <footer class="main-footer">
        <div class="row">
            <div class="col-xs-12 col-sm-4">

            </div>
            <div class="hidden-xs col-sm-4">

            </div>
            <div class="hidden-xs col-sm-3">
                <div class="text-right">
                    <span>Version: @Assembly.GetAssembly(typeof(HomeController)).GetName().Version.ToString()</span>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
</body>
</html>
